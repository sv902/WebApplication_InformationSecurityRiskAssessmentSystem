@model WebApplication_InformationSecurityRiskAssessmentSystem.Models.Threat

@{
    ViewData["Title"] = "Видалення загрози";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-container">
    <h1 class="my-header">@ViewData["Title"]</h1>

    <h3>Ви справді бажаєте вилучити цю загрозу?</h3>
    <div>
        <h4>Загроза</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Видалити" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-sm btn-success">Назад до списку загроз</a>
        </form>
    </div>
</div>


