@model WebApplication_InformationSecurityRiskAssessmentSystem.Models.AssetThreat

@{
    ViewData["Title"] = "Редагувати модель загроз";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-container">

    <h1 class="my-header">@ViewData["Title"]</h1>

    <h4>Редагувати зв'язки</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="AssetId" class="control-label"></label>
                    <select asp-for="AssetId" class="form-control" asp-items="ViewBag.AssetId"></select>
                    <span asp-validation-for="AssetId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ThreatId" class="control-label"></label>
                    <select asp-for="ThreatId" class="form-control" asp-items="ViewBag.ThreatId"></select>
                    <span asp-validation-for="ThreatId" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Зберегти" class="btn btn-lg btn-primary custom-btn btn-2" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div>
        <a asp-action="Index" class="btn btn-sm btn-success">Назад до моделі загроз</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
