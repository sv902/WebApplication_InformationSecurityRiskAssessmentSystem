@model WebApplication_InformationSecurityRiskAssessmentSystem.Models.AssetThreat

@{
    ViewData["Title"] = "Детальний опис моделі загроз";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-container">
    <h1 class="my-header">@ViewData["Title"]</h1>
    <div>
        <h4>Модель загроз</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Asset!.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Asset!.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Asset!.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Asset!.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Threat!.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Threat!.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Threat!.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Threat!.Description)
            </dd>
        </dl>
    </div>
    <div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-primary">Редагування</a>
            <span|></span|>
        }
        <a asp-action="Index" class="btn btn-sm btn-success">Назад до моделі загроз</a>
    </div>
</div>

